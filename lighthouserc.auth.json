{
  "ci": {
    "collect": {
      "startServerCommand": "pnpm run start",
      "startServerReadyPattern": "started server",
      "startServerReadyTimeout": 60000,
      "numberOfRuns": 1,
      "url": [
        "http://localhost:3000/dashboard",
        "http://localhost:3000/pipeline",
        "http://localhost:3000/portfolio",
        "http://localhost:3000/contacts",
        "http://localhost:3000/analytics",
        "http://localhost:3000/audit-trail",
        "http://localhost:3000/compliance",
        "http://localhost:3000/deal-intelligence",
        "http://localhost:3000/dealflow-review",
        "http://localhost:3000/documents",
        "http://localhost:3000/fund-admin",
        "http://localhost:3000/integrations",
        "http://localhost:3000/lp-management",
        "http://localhost:3000/notifications",
        "http://localhost:3000/reports",
        "http://localhost:3000/settings",
        "http://localhost:3000/tax-center",
        "http://localhost:3000/waterfall",
        "http://localhost:3000/ai-tools",
        "http://localhost:3000/409a-valuations"
      ],
      "settings": {
        "disableStorageReset": true
      },
      "puppeteerScript": "./scripts/lhci-auth.js"
    },
    "upload": {
      "target": "filesystem",
      "outputDir": ".lighthouseci"
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.9 }],
        "categories:accessibility": ["warn", { "minScore": 0.9 }],
        "categories:best-practices": ["warn", { "minScore": 1 }],
        "categories:seo": ["warn", { "minScore": 1 }],
        "categories:pwa": ["warn", { "minScore": 1 }],
        "first-contentful-paint": ["warn", { "maxNumericValue": 1200 }],
        "largest-contentful-paint": ["warn", { "maxNumericValue": 2500 }],
        "speed-index": ["warn", { "maxNumericValue": 2500 }],
        "total-blocking-time": ["warn", { "maxNumericValue": 200 }],
        "cumulative-layout-shift": ["warn", { "maxNumericValue": 0.1 }],
        "unused-javascript": ["warn", { "maxNumericValue": 200000 }]
      }
    }
  }
}
